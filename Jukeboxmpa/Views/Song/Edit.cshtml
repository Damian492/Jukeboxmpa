@model Jukeboxmpa.Models.Song



<h2>Liedje Bewerken</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input asp-for="ID" type="hidden" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Artist"></label>
        <input asp-for="Artist" class="form-control" />
        <span asp-validation-for="Artist" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Album"></label>
        <input asp-for="Album" class="form-control" />
        <span asp-validation-for="Album" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FilePath"></label>
        <input asp-for="FilePath" class="form-control" />
        <span asp-validation-for="FilePath" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Credits"></label>
        <textarea asp-for="Credits" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}






    @model Jukeboxmpa.Models.Playlist

<h2>Nieuwe Playlist Aanmaken</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Playlist naam" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsPublic"></label>
        <input asp-for="IsPublic" type="checkbox" />
        <span asp-validation-for="IsPublic" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-action="My" class="btn btn-secondary">Annuleren</a>
</form>
